{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "allowJs": true,          // Разрешить .js файлы
    "checkJs": false,         // Не проверять .js файлы (включайте постепенно)
    "strict": false,          // Сначала отключить строгий режим

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src",
    "vite.config"
  ],
  "exclude": ["node_modules"]
}